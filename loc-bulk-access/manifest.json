{
  "manifest_version": 2,
  "name": "LC Bulk Access",
  "version": "1.0",
  "description": "Enable bulk access to Library of Congress digital collections data and assets",
  "icons": {
    "48": "icons/loc-bulk-access-48x48.png",
    "96": "icons/loc-bulk-access-96x96.png"
  },
  "browser_action": {
    "default_icon": "icons/loc-32x32.png",
    "default_title": "Library of Congress Bulk Access",
    "default_popup": "ui/popup.html"
  },
  "background": {
    "page": "ui/background.html",
    "persistent": false
  },  
  "permissions": [
    "*://*.loc.gov/*",
    "storage",
    "unlimitedStorage",
    "activeTab",
    "downloads",
    "downloads.open"
  ]
}
